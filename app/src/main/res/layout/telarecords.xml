<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:id="@+telaRecordes/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/nomeJogodor"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:id="@+telaRecordes/editText1"
		android:layout_width="fill_parent"></EditText>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/linearLayout1">
		<TextView
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="@string/tempo"
			android:layout_width="wrap_content"
			android:id="@+id/textView1"></TextView>
		<TextView
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="99:99"
			android:layout_width="wrap_content"
			android:id="@+telaRecordes/textView2"></TextView>
	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/linearLayout2"
		android:orientation="horizontal"
		android:gravity="center">
		<Button
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/botaoSalvar"
			android:id="@+id/button1"></Button>
		<Button
			android:layout_weight="1"
			android:text="@string/botaoListar"
			android:id="@+id/button2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>
	</LinearLayout>
</LinearLayout>